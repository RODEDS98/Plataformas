<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APLICACIONCV.DynamicCVPage">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20">
                <!-- Título -->
                <Label Text="Formulario de CV Dinámico" FontSize="30" HorizontalOptions="Center" />

                <!-- Nombre -->
                <Entry x:Name="NameEntry" Placeholder="Nombre" />

                <!-- Puesto -->
                <Entry x:Name="PositionEntry" Placeholder="Puesto" />

                <!-- Correo -->
                <Entry x:Name="EmailEntry" Placeholder="Correo Electrónico" />

                <!-- Teléfono -->
                <Entry x:Name="PhoneEntry" Placeholder="Teléfono" />

                <!-- Habilidades -->
                <Entry x:Name="SkillsEntry" Placeholder="Habilidades (separadas por coma)" />

                <!-- Botón para enviar formulario -->
                <Button Text="Generar CV" Clicked="OnGenerateCVClicked" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
